{% extends "@Contao/content_element/_base.html.twig" %}

{% if data.layoutType == 'flex' %}
    {% set attributes = attrs()
        .addClass('flex'|format_tailwind_classes)
        .addClass(data.gap|format_tailwind_classes)
        .addClass(data.alignment|format_tailwind_classes)
        .addClass(data.flexDirection|format_tailwind_classes)
        .addClass(data.flexWrap|format_tailwind_classes)
        .mergeWith(attributes|default)
    %}
{% elseif data.layoutType == 'grid' %}
    {% set attributes = attrs()
        .addClass('grid'|format_tailwind_classes)
        .addClass(data.gridTemplateColumns|format_tailwind_classes)
        .addClass(data.gridTemplateRows|format_tailwind_classes)
        .addClass(data.gap|format_tailwind_classes)
        .addClass(data.alignment|format_tailwind_classes)
        .mergeWith(attributes|default)
    %}
{% elseif data.layoutType == 'container' %}
    {% set attributes = attrs()
        .addClass(data.containerSize|format_tailwind_classes)
        .addClass(data.containerCenter|format_tailwind_classes)
        .mergeWith(attributes|default)
    %}
{% elseif data.layoutType == 'columns' %}
    {% set attributes = attrs()
        .addClass(data.columns|format_tailwind_classes)
        .addClass(data.gap|format_tailwind_classes)
        .mergeWith(attributes|default)
    %}
{% endif %}

{% block content %}
    {% for fragment in nested_fragments %}
        {{ content_element(fragment) }}
    {% endfor %}
{% endblock %}
