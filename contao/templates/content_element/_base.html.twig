{% extends '@Contao/content_element/_base.html.twig' %}

{% if data.nestedInLayout|default %}
    {% if data.parentLayoutType == 'flex' %}
        {% set attributes = attrs()
            .addClass(data.flexBasis|format_tailwind_classes)
            .addClass(data.flex|format_tailwind_classes)
            .addClass(data.flexGrow|format_tailwind_classes)
            .addClass(data.flexShrink|format_tailwind_classes)
            .addClass(data.order|format_tailwind_classes)
            .addClass(data.alignmentSelf|format_tailwind_classes)
            .mergeWith(attributes|default)
        %}
    {% elseif data.parentLayoutType == 'grid' %}
        {% set attributes = attrs()
            .addClass(data.gridColumn|format_tailwind_classes)
            .addClass(data.gridRow|format_tailwind_classes)
            .addClass(data.order|format_tailwind_classes)
            .addClass(data.alignmentSelf|format_tailwind_classes)
            .mergeWith(attributes|default)
        %}
    {% elseif data.parentLayoutType == 'columns' %}
        {% set attributes = attrs()
            .addClass(data.break|format_tailwind_classes)
            .mergeWith(attributes|default)
        %}
    {% endif %}
{% endif %}

{% if data.spacing|default %}
    {% set attributes = attrs()
        .addClass(data.spacing|format_tailwind_classes)
        .mergeWith(attributes|default)
    %}
{% endif %}